{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "lib",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "cypress"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
